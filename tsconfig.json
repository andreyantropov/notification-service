{
  "compilerOptions": {
    "target": "ES2022",
    "lib": [
      "es2022"
    ],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "types": [
      "node"
    ],
    "sourceMap": true,
    "incremental": true,
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "removeComments": true,
    "noEmit": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "eslint.config.js"
  ]
}