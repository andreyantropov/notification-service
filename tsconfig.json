{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["es2022"],
    "module": "CommonJS",
    "moduleResolution": "node",

    "rootDir": "./src",
    "outDir": "./dist",

    "strict": true,
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true,

    "esModuleInterop": true,
    "importHelpers": true,
    "allowJs": true,
    "resolveJsonModule": true,

    "skipLibCheck": true,
    "sourceMap": true,
    "types": ["node"],

    "incremental": true,
    "composite": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}
