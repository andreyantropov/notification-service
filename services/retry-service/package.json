{
  "name": "retry-service",
  "version": "1.0.0",
  "description": "Сервис маршрутизации сообщений с повторными попытками и DLQ для платформы уведомлений.",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "cross-env NODE_ENV=development dotenv -e .env.dev -- nodemon --watch src --ext ts --exec \"tsx src/index.ts\"",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint --ext .ts,.tsx .",
    "lint:fix": "eslint --fix --ext .ts,.tsx .",
    "lint:format": "prettier . --write"
  },
  "keywords": [
    "retry-service",
    "rabbitmq",
    "dlq",
    "message-routing",
    "nodejs",
    "typescript",
    "background-worker"
  ],
  "author": {
    "name": "sweep-it",
    "email": "development@sweep‑it.ru"
  },
  "contributors": [
    {
      "name": "Andrey Antropov",
      "email": "andrey.antropov@planarchel.ru"
    }
  ],
  "license": "ISC",
  "engines": {
    "node": ">=23.0.0",
    "npm": ">=9.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.27.0",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "@vitest/coverage-v8": "^3.2.3",
    "dotenv-cli": "^11.0.0",
    "eslint": "^9.27.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.4.1",
    "nodemon": "^3.1.10",
    "prettier": "^3.5.3",
    "supertest": "^7.1.3",
    "tsx": "^4.20.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.33.0",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@notification-platform/shared": "^1.0.0",
    "@notification-platform/http": "^1.0.0",
    "@notification-platform/telemetry": "^1.0.0",
    "@notification-platform/queues": "^1.0.0",
    "@cloudamqp/amqp-client": "^3.3.2",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/exporter-logs-otlp-http": "^0.208.0",
    "@opentelemetry/exporter-metrics-otlp-http": "^0.208.0",
    "@opentelemetry/instrumentation-express": "^0.54.0",
    "@opentelemetry/instrumentation-http": "^0.205.0",
    "@opentelemetry/sdk-logs": "^0.208.0",
    "@opentelemetry/sdk-metrics": "^2.2.0",
    "@opentelemetry/sdk-node": "^0.205.0",
    "@types/express": "^5.0.3",
    "awilix": "^12.0.5",
    "cross-env": "^7.0.3",
    "express": "^5.1.0",
    "express-async-handler": "^1.2.0",
    "p-timeout": "^6.1.4",
    "tslib": "^2.8.1"
  }
}