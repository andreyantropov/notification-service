{
  "name": "isplanar-notification",
  "version": "1.1.0",
  "description": "Сервис автоматической рассылки уведомлений пользователям ISPlanar через различные каналы связи (Bitrix24, Email). Поддерживает интеграцию с базой данных Firebird и централизованное логирование в InfluxDB.",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "cross-env NODE_ENV=production node -r dotenv/config dist/index.js dotenv_config_path=.env",
    "dev": "cross-env NODE_ENV=development nodemon --watch src --ext ts --exec \"npx tsx -r dotenv/config src/index.ts dotenv_config_path=.env.dev\"",
    "prod": "npm run build && npm run start",
    "lint": "eslint --ext .ts,.tsx .",
    "fix": "eslint --fix --ext .ts,.tsx .",
    "format": "prettier . --write",
    "test": "vitest",
    "coverage": "vitest run --coverage"
  },
  "keywords": [
    "ISPlanar",
    "Notification",
    "Bitrix24",
    "Email",
    "SMTP"
  ],
  "author": {
    "name": "Andrey Antropov",
    "email": "andrey.antropov@planarchel.ru"
  },
  "contributors": [
    {
      "name": "Andrey Antropov",
      "email": "andrey.antropov@planarchel.ru"
    }
  ],
  "license": "ISC",
  "engines": {
    "node": ">=23.0.0",
    "npm": ">=9.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.27.0",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "@vitest/coverage-v8": "^3.2.3",
    "axios-mock-adapter": "^2.1.0",
    "eslint": "^9.27.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.4.1",
    "nodemon": "^3.1.10",
    "prettier": "^3.5.3",
    "tsx": "^4.20.1",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.33.0",
    "vitest": "^3.2.3"
  },
  "dependencies": {
    "@influxdata/influxdb-client": "^1.35.0",
    "@types/nodemailer": "^6.4.17",
    "axios": "^1.9.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.5.0",
    "install": "^0.13.0",
    "node-firebird": "^1.1.9",
    "nodemailer": "^7.0.3",
    "npm": "^11.4.1",
    "serialize-error": "^12.0.0",
    "tslib": "^2.8.1",
    "uuid": "^11.1.0",
    "zod": "^3.25.41"
  }
}
