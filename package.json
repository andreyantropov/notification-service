{
  "name": "notification-platform",
  "version": "1.0.0",
  "description": "Платформа уведомлений: микросервисы для доставки сообщений через Bitrix24, Email и другие каналы.",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "cross-env NODE_ENV=development dotenv -e .env.dev -- nodemon --watch src --ext ts --exec \"tsx src/index.ts\"",
    "build": "tsc",
    "start": "node dist/index.js",
    "migrate:dev": "dotenv -e .env.dev -- tsx migrations/index.ts",
    "migrate:prod": "tsx migrations/index.ts",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint --ext .ts,.tsx .",
    "lint:fix": "eslint --fix --ext .ts,.tsx .",
    "lint:format": "prettier . --write"
  },
  "workspaces": [
    "shared",
    "packages/*",
    "services/*"
  ],
  "keywords": [
    "notification",
    "microservices",
    "rabbitmq",
    "typescript"
  ],
  "author": {
    "name": "sweep-it",
    "email": "development@sweep‑it.ru"
  },
  "contributors": [
    {
      "name": "Andrey Antropov",
      "email": "andrey.antropov@planarchel.ru"
    }
  ],
  "license": "ISC",
  "engines": {
    "node": ">=23.0.0",
    "npm": ">=9.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.27.0",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "@vitest/coverage-v8": "^3.2.3",
    "dotenv-cli": "^11.0.0",
    "eslint": "^9.27.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.4.1",
    "prettier": "^3.5.3",
    "tsx": "^4.20.1",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  }
}